{
  "compilerOptions": {
    "baseUrl": "src",
    "declaration": true,
    "declarationDir": "dist",
    "module": "system",
    "target": "es6",
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
